<p id="notice"><%= notice %></p>

<h1>My Notes</h1>

<table class='table table-stripped table-hover '>
  <thead class='thead-dark'>
    <tr>
      <th>Title</th>
      <%# <th>Body</th> %>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @notes.each do |note| %>
      <tr>
        <td><%= note.title %></td>
        <%# <td><%= note.body </td> %>
        <td><%= link_to 'Show', note, class:'btn btn-secondary' %></td>
        <td><%= link_to 'Edit', edit_note_path(note), class:'btn btn-success' %></td>
        <td><%= button_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Note', new_note_path, class:'btn btn-secondary' %>
