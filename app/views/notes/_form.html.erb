<%= form_with(model: note, local: true) do |form| %>
  <% if note.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(note.errors.count, "error") %> prohibited this note from being saved:</h2>

      <ul>
        <% note.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <% form.label :title %>
    <%= form.text_field :title, class:'form-control', placeholder:'Title' %>
  </div>

  <div class="field form-group">
    <% form.label :body %>
    <%= form.text_area :body, class:'form-control', placeholder:'This is where you add the note', rows: "10"  %>
  </div>

  <div class="field form-group">
    <% form.label :body %>
    <%= form.hidden_field :user_id, :id => :note_user_id, class:'form-control', value:current_user.id, min:current_user.id, max:current_user.id %>
  </div>
  <br />
  <div class="actions">
    <%= form.submit class:'btn btn-primary'%>
  </div>
<% end %>
